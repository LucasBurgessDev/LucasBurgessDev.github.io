name: Gemini Feature Evolution
on:
  schedule:
    - cron: '0 0 * * 1'
  workflow_dispatch:

concurrency:
  group: ${{ github.workflow }}-${{ github.ref }}
  cancel-in-progress: false

jobs:
  feature:
    runs-on: ubuntu-latest
    permissions:
      contents: write
      pull-requests: write
    steps:
      - uses: actions/checkout@v4
        with:
          ref: dev
          fetch-depth: 0

      - name: Gemini Feature Upgrade
        uses: google-github-actions/run-gemini-cli@main
        env:
          GEMINI_DEBUG: false
        with:
          gemini_api_key: ${{ secrets.GEMINI_API_KEY }}
          gemini_model: "gemini-3-flash"
          prompt: |
            ACT AS: Creative React Developer.
            TASK: Add ONE new UI feature to the portfolio.
            IDEAS: Custom 'useReadingTime' hook, a 'ScrollProgress' bar, or a 'ThemeSwitcher' (CSS variables).
            CONSTRAINTS: No Tailwind/Lucide. Use CSS Modules or standard CSS.
            OUTPUT: Create the component and export it. Use commit message 'task:Feature'.
      - name: Create PR
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          COMMIT=$(git log dev..HEAD --oneline | grep "task:Feature" || true)
          if [ -n "$COMMIT" ]; then
            BRANCH="ai/security-$(date +%s)"
            git checkout -b "$BRANCH"
            git push origin "$BRANCH"
            gh pr create --base dev --head "$BRANCH" --title "üõ°Ô∏è AI Security Hardening" --body "Automated security audit and fix."
          fi